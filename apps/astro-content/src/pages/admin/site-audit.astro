  @media (max-width: 1100px) {
    .table-header,
    .table-row {
      grid-template-columns: 40px 140px 1fr 100px 120px 50px;
    }

    .col-notes {
      display: none;
    }
  }

  @media (max-width: 800px) {
    .table-header,
    .table-row {
      grid-template-columns: 40px 1fr 100px 100px 40px;
    }

    .col-route {
      display: none;
    }
  }
</style>

<script is:inline>
  // Storage key
  const STORAGE_KEY = 'southland_site_audit'

  // Load saved state
  function loadState() {
    try {
      const saved = localStorage.getItem(STORAGE_KEY)
      return saved ? JSON.parse(saved) : {}
    } catch {
      return {}
    }
  }

  // Save state
  function saveState(state) {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(state))
  }

  // Get overall status for a row
  function getRowStatus(design, content) {
    if (design === 'approved' && (content === 'approved' || content === 'not-started')) {
      return 'approved'
    }
    if (design === 'in-review' || content === 'needs-persona' || content === 'needs-quality') {
      return 'in-review'
    }
    return 'not-started'
  }

  // Update progress display
  function updateProgress() {
    const state = loadState()
    const rows = document.querySelectorAll('.table-row')
    let approved = 0
    let inReview = 0
    let notStarted = 0

    rows.forEach((row) => {
      const route = row.dataset.route
      const data = state[route] || {}
      const status = getRowStatus(data.design || 'not-started', data.content || 'not-started')

      // Update status dot
      const dot = row.querySelector('[data-status-dot]')
      dot.className = `status-dot ${status}`

      if (status === 'approved') approved++
      else if (status === 'in-review') inReview++
      else notStarted++
    })

    const total = rows.length
    const percent = total > 0 ? Math.round((approved / total) * 100) : 0

    document.getElementById('approved-count').textContent = approved
    document.getElementById('review-count').textContent = inReview
    document.getElementById('pending-count').textContent = notStarted
    document.getElementById('progress-bar').style.width = percent + '%'
    document.getElementById('progress-percent').textContent = percent + '%'
  }

  // Initialize
  function init() {
    const state = loadState()

    // Populate fields from saved state
    document.querySelectorAll('.table-row').forEach((row) => {
      const route = row.dataset.route
      const data = state[route] || {}

      const designSelect = row.querySelector('[data-field="design"]')
      const contentSelect = row.querySelector('[data-field="content"]')
      const notesInput = row.querySelector('[data-field="notes"]')

      if (data.design) designSelect.value = data.design
      if (data.content) contentSelect.value = data.content
      if (data.notes) notesInput.value = data.notes
    })

    // Add change listeners
    document.querySelectorAll('.design-select, .content-select, .notes-input').forEach((el) => {
      el.addEventListener('change', function () {
        const row = this.closest('.table-row')
        const route = row.dataset.route
        const field = this.dataset.field
        const state = loadState()

        if (!state[route]) state[route] = {}
        state[route][field] = this.value
        saveState(state)
        updateProgress()
      })
    })

    // Clear row button
    document.querySelectorAll('[data-action="clear"]').forEach((btn) => {
      btn.addEventListener('click', function () {
        const row = this.closest('.table-row')
        const route = row.dataset.route
        const state = loadState()

        delete state[route]
        saveState(state)

        row.querySelector('[data-field="design"]').value = 'not-started'
        row.querySelector('[data-field="content"]').value = 'not-started'
        row.querySelector('[data-field="notes"]').value = ''
        updateProgress()
      })
    })

    // Export button
    document.getElementById('export-btn').addEventListener('click', function () {
      const state = loadState()
      const blob = new Blob([JSON.stringify(state, null, 2)], { type: 'application/json' })
      const url = URL.createObjectURL(blob)
      const a = document.createElement('a')
      a.href = url
      a.download = 'site-audit-' + new Date().toISOString().split('T')[0] + '.json'
      a.click()
      URL.revokeObjectURL(url)
    })

    // Reset button
    document.getElementById('reset-btn').addEventListener('click', function () {
      if (confirm('Reset all audit progress? This cannot be undone.')) {
        localStorage.removeItem(STORAGE_KEY)
        location.reload()
      }
    })

    updateProgress()
  }

  // Run on load
  init()
</script>
