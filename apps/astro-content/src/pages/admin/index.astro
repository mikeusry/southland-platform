---
/**
 * Admin Dashboard
 * Overview of site status and quick actions
 */
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Dashboard" activeNav="/admin">
  <header class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <p class="page-subtitle">Southland Organics site administration</p>
  </header>

  <!-- Stats Grid -->
  <div class="stats-grid">
    <a href="/admin/branding" class="stat-card">
      <div class="stat-icon green">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
        </svg>
      </div>
      <div class="stat-content">
        <span class="stat-value">Brand</span>
        <span class="stat-label">Guidelines & Assets</span>
      </div>
    </a>

    <a href="/admin/images" class="stat-card">
      <div class="stat-icon cyan">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
      <div class="stat-content">
        <span class="stat-value">Images</span>
        <span class="stat-label">Cloudinary Components</span>
      </div>
    </a>

    <a href="/admin/seo" class="stat-card">
      <div class="stat-icon blue">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      <div class="stat-content">
        <span class="stat-value">SEO</span>
        <span class="stat-label">Search Performance</span>
      </div>
      <span class="badge badge-neutral">Coming Soon</span>
    </a>

    <a href="/admin/content" class="stat-card">
      <div class="stat-icon purple">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
      </div>
      <div class="stat-content">
        <span class="stat-value">Content</span>
        <span class="stat-label">Manage Pages & Posts</span>
      </div>
      <span class="badge badge-neutral">Coming Soon</span>
    </a>

    <a href="/podcast" class="stat-card">
      <div class="stat-icon orange">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
        </svg>
      </div>
      <div class="stat-content">
        <span class="stat-value">Podcast</span>
        <span class="stat-label">Ag & Culture Episodes</span>
      </div>
    </a>
  </div>

  <!-- CDP Tools Section -->
  <div class="card" style="margin-bottom: 24px; border: 2px solid #44883e;">
    <div class="card-header" style="background: #f0fdf4;">
      <h2 class="card-title" style="color: #166534;">CDP Tools (New!)</h2>
      <p style="color: #166534; font-size: 14px; margin-top: 4px;">Customer Data Platform - Track customer outcomes</p>
    </div>
    <div class="quick-actions">
      <a href="/admin/sales-log" class="action-card" style="background: #fef3c7;">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        <span>Sales Outcome Log</span>
      </a>
      <a href="/admin/cdp-guide" class="action-card" style="background: #dbeafe;">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        <span>CDP Guide</span>
      </a>
      <a href="/survey/backyard" class="action-card">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
        </svg>
        <span>Betty Survey</span>
      </a>
      <a href="/survey/commercial" class="action-card">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
        </svg>
        <span>Bill Survey</span>
      </a>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="card">
    <div class="card-header">
      <h2 class="card-title">Quick Actions</h2>
    </div>
    <div class="quick-actions">
      <a href="/admin/branding" class="action-card">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
        </svg>
        <span>View Brand Guide</span>
      </a>
      <a href="/admin/images" class="action-card">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <span>Image Docs</span>
      </a>
      <a href="/podcast" class="action-card">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        <span>View Podcast</span>
      </a>
      <a href="https://shopify.com/admin" target="_blank" rel="noopener" class="action-card">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
        </svg>
        <span>Shopify Admin</span>
      </a>
      <a href="https://supabase.com/dashboard" target="_blank" rel="noopener" class="action-card">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
        </svg>
        <span>Supabase</span>
      </a>
    </div>
  </div>

  <!-- Site Info -->
  <div class="card">
    <div class="card-header">
      <h2 class="card-title">Site Information</h2>
    </div>
    <div class="info-grid">
      <div class="info-item">
        <span class="info-label">Platform</span>
        <span class="info-value">Astro + Shopify</span>
      </div>
      <div class="info-item">
        <span class="info-label">Domain</span>
        <span class="info-value">southlandorganics.com</span>
      </div>
      <div class="info-item">
        <span class="info-label">Brand ID</span>
        <span class="info-value font-mono">southland</span>
      </div>
      <div class="info-item">
        <span class="info-label">Primary Color</span>
        <div class="color-preview">
          <span class="color-dot" style="background: #44883e;"></span>
          <span class="info-value font-mono">#44883E</span>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 24px;
  }

  .stat-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 20px;
    text-decoration: none;
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: 12px;
    transition: all 0.15s ease;
  }

  .stat-card:hover {
    border-color: var(--accent);
    box-shadow: var(--shadow);
  }

  .stat-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .stat-icon svg {
    width: 20px;
    height: 20px;
  }

  .stat-icon.green { background: var(--accent-light); color: var(--accent-dark); }
  .stat-icon.blue { background: #dbeafe; color: #1d4ed8; }
  .stat-icon.cyan { background: #cffafe; color: #0891b2; }
  .stat-icon.orange { background: var(--warning-light); color: #92400e; }
  .stat-icon.purple { background: #f3e8ff; color: #7c3aed; }

  .stat-content {
    flex: 1;
    min-width: 100px;
  }

  .stat-value {
    display: block;
    font-size: 18px;
    font-weight: 600;
    color: var(--text);
    line-height: 1.2;
  }

  .stat-label {
    font-size: 13px;
    color: var(--text-secondary);
  }

  .quick-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 12px;
  }

  .action-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    padding: 20px;
    background: var(--surface-alt);
    border-radius: var(--radius);
    text-decoration: none;
    color: var(--text-secondary);
    transition: all 0.15s ease;
  }

  .action-card:hover {
    background: var(--accent-light);
    color: var(--accent-dark);
  }

  .action-card svg {
    width: 24px;
    height: 24px;
  }

  .action-card span {
    font-size: 13px;
    font-weight: 500;
    text-align: center;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 16px;
  }

  .info-item {
    padding: 12px 0;
    border-bottom: 1px solid var(--border-subtle);
  }

  .info-label {
    display: block;
    font-size: 12px;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
  }

  .info-value {
    font-size: 14px;
    font-weight: 500;
    color: var(--text);
  }

  .info-value.font-mono {
    font-family: var(--font-mono);
  }

  .color-preview {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .color-dot {
    width: 16px;
    height: 16px;
    border-radius: 4px;
  }
</style>
