          <div
            class="video-card group relative cursor-pointer overflow-hidden rounded-2xl bg-black shadow-lg"
            data-playback-id={video.playbackId}
            data-title={video.title}
          >
            <img
              src={`https://image.mux.com/${video.playbackId}/thumbnail.jpg?width=640&height=360&fit_mode=smartcrop`}
