 * - Homeowner DIY guides
 */
import BaseLayout from '../../layouts/BaseLayout.astro'

const title = 'Organic Lawn & Garden Solutions | Southland Organics'
const description =
  'Transform your lawn naturally with organic soil amendments, beneficial microbes, and proven lawn care solutions. Safe for kids, pets, and the environment.'

// Schema for SEO
const schema = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Organic Lawn & Garden Solutions',
  description: description,
  url: 'https://southlandorganics.com/lawn/',
  provider: {
    '@type': 'Organization',
    name: 'Southland Organics',
