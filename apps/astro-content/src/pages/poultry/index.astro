---
/**
 * Poultry Hub - Landing page for all poultry visitors
 *
 * Branches to either Backyard or Commercial based on selection
 */
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = "Organic Poultry Solutions | Southland Organics";
const description = "Organic probiotics and gut health solutions for backyard chickens and commercial poultry operations. OMRI Listed, proven results.";

const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: "Poultry Solutions",
  description: description,
  url: "https://southlandorganics.com/poultry/",
};
---

<BaseLayout title={title} description={description} schema={schema}>
  <!-- Hero -->
  <section class="relative bg-gradient-to-br from-green-800 to-green-900 text-white py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Organic Poultry Solutions
      </h1>
      <p class="text-xl text-green-100 max-w-2xl mx-auto">
        Whether you have a backyard coop or a commercial operation, we have organic solutions to keep your birds healthy.
      </p>
    </div>
  </section>

  <!-- Two Paths -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-center mb-12" style="color: var(--color-title);">
        Which best describes you?
      </h2>
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Backyard -->
        <a href="/poultry/backyard/" class="group block bg-amber-50 rounded-2xl p-8 border-2 border-amber-200 hover:border-amber-400 transition-colors">
          <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mb-6 group-hover:bg-amber-200 transition-colors">
            <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 19c-4 0-7-2.5-7-6 0-2 1-3.5 2-4.5-.5-1-.5-2.5 0-3.5 1 0 2 .5 2.5 1 .5-1 1.5-2 3-2s2.5 1 3 2c.5-.5 1.5-1 2.5-1 .5 1 .5 2.5 0 3.5 1 1 2 2.5 2 4.5 0 3.5-3 6-7 6z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3" style="color: var(--color-title);">Backyard Flock</h3>
          <p class="text-gray-600 mb-4">
            Hobby chicken keepers with small flocks at home. Looking for natural solutions that are safe for your family and the eggs you eat.
          </p>
          <span class="text-amber-600 font-semibold group-hover:underline">
            Shop Backyard Products →
          </span>
        </a>

        <!-- Commercial -->
        <a href="/poultry/commercial/" class="group block bg-green-50 rounded-2xl p-8 border-2 border-green-200 hover:border-green-400 transition-colors">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-6 group-hover:bg-green-200 transition-colors">
            <svg class="w-8 h-8 text-green-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 21h18M4 21V10l8-6 8 6v11M9 21v-6h6v6"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3" style="color: var(--color-title);">Commercial Operation</h3>
          <p class="text-gray-600 mb-4">
            Broiler farms, layer operations, or contract growers. Looking for proven solutions to improve FCR and reduce mortality.
          </p>
          <span class="text-green-700 font-semibold group-hover:underline">
            Shop Commercial Products →
          </span>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Southland -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12" style="color: var(--color-title);">
        Why Poultry Farmers Trust Us
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="text-4xl font-bold text-green-700 mb-2">15+</div>
          <div class="text-gray-600">Years Serving Poultry Farmers</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-green-700 mb-2">OMRI</div>
          <div class="text-gray-600">Listed Organic Products</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-green-700 mb-2">500+</div>
          <div class="text-gray-600">Farms Using Our Products</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-green-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Questions? We're Here to Help.</h2>
      <p class="text-lg text-green-100 mb-8">
        Call us to talk with a real poultry expert who can help you find the right solution.
      </p>
      <a href="tel:800-608-3755" class="inline-flex items-center gap-2 px-8 py-4 bg-white text-green-800 font-semibold rounded-lg hover:bg-green-50 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        Call 800-608-3755
      </a>
    </div>
  </section>
</BaseLayout>
