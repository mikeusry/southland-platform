---
/**
 * Poultry Hub - Landing page for all poultry visitors
 *
 * Branches to either Backyard or Commercial based on selection
 */
import BaseLayout from '../../layouts/BaseLayout.astro'

const title = 'Organic Poultry Solutions | Southland Organics'
const description =
  'Organic probiotics and gut health solutions for backyard chickens and commercial poultry operations. OMRI Listed, proven results.'

const schema = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Poultry Solutions',
  description: description,
  url: 'https://southlandorganics.com/poultry/',
}
---

<BaseLayout title={title} description={description} schema={schema}>
  <!-- Hero -->
  <section class="relative bg-gradient-to-br from-green-800 to-green-900 py-16 text-white md:py-24">
    <div class="mx-auto max-w-6xl px-4 text-center">
      <h1 class="mb-6 text-4xl font-bold md:text-5xl">Organic Poultry Solutions</h1>
      <p class="mx-auto max-w-2xl text-xl text-green-100">
        Whether you have a backyard coop or a commercial operation, we have organic solutions to
        keep your birds healthy.
      </p>
    </div>
  </section>

  <!-- Two Paths -->
  <section class="bg-white py-16">
    <div class="mx-auto max-w-4xl px-4">
      <h2 class="mb-12 text-center text-2xl font-bold" style="color: var(--color-title);">
        Which best describes you?
      </h2>
      <div class="grid gap-8 md:grid-cols-2">
        <!-- Backyard -->
        <a
          href="/poultry/backyard/"
          class="group block rounded-2xl border-2 border-amber-200 bg-amber-50 p-8 transition-colors hover:border-amber-400"
        >
          <div
            class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-amber-100 transition-colors group-hover:bg-amber-200"
          >
            <svg
              class="h-8 w-8 text-amber-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M12 19c-4 0-7-2.5-7-6 0-2 1-3.5 2-4.5-.5-1-.5-2.5 0-3.5 1 0 2 .5 2.5 1 .5-1 1.5-2 3-2s2.5 1 3 2c.5-.5 1.5-1 2.5-1 .5 1 .5 2.5 0 3.5 1 1 2 2.5 2 4.5 0 3.5-3 6-7 6z"
              ></path>
            </svg>
          </div>
          <h3 class="mb-3 text-2xl font-bold" style="color: var(--color-title);">Backyard Flock</h3>
          <p class="mb-4 text-gray-600">
            Hobby chicken keepers with small flocks at home. Looking for natural solutions that are
            safe for your family and the eggs you eat.
          </p>
          <span class="font-semibold text-amber-600 group-hover:underline">
            Shop Backyard Products →
          </span>
        </a>

        <!-- Commercial -->
        <a
          href="/poultry/commercial/"
          class="group block rounded-2xl border-2 border-green-200 bg-green-50 p-8 transition-colors hover:border-green-400"
        >
          <div
            class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-green-100 transition-colors group-hover:bg-green-200"
          >
            <svg
              class="h-8 w-8 text-green-700"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M3 21h18M4 21V10l8-6 8 6v11M9 21v-6h6v6"></path>
            </svg>
          </div>
          <h3 class="mb-3 text-2xl font-bold" style="color: var(--color-title);">
            Commercial Operation
          </h3>
          <p class="mb-4 text-gray-600">
            Broiler farms, layer operations, or contract growers. Looking for proven solutions to
            improve FCR and reduce mortality.
          </p>
          <span class="font-semibold text-green-700 group-hover:underline">
            Shop Commercial Products →
          </span>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Southland -->
  <section class="bg-gray-50 py-16">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="mb-12 text-center text-3xl font-bold" style="color: var(--color-title);">
        Why Poultry Farmers Trust Us
      </h2>
      <div class="grid gap-8 md:grid-cols-3">
        <div class="text-center">
          <div class="mb-2 text-4xl font-bold text-green-700">15+</div>
          <div class="text-gray-600">Years Serving Poultry Farmers</div>
        </div>
        <div class="text-center">
          <div class="mb-2 text-4xl font-bold text-green-700">OMRI</div>
          <div class="text-gray-600">Listed Organic Products</div>
        </div>
        <div class="text-center">
          <div class="mb-2 text-4xl font-bold text-green-700">500+</div>
          <div class="text-gray-600">Farms Using Our Products</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-green-800 py-16 text-white">
    <div class="mx-auto max-w-4xl px-4 text-center">
      <h2 class="mb-4 text-3xl font-bold">Questions? We're Here to Help.</h2>
      <p class="mb-8 text-lg text-green-100">
        Call us to talk with a real poultry expert who can help you find the right solution.
      </p>
      <a
        href="tel:800-608-3755"
        class="inline-flex items-center gap-2 rounded-lg bg-white px-8 py-4 font-semibold text-green-800 transition-colors hover:bg-green-50"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
          ></path>
        </svg>
        Call 800-608-3755
      </a>
    </div>
  </section>
</BaseLayout>
