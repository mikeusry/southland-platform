---
/**
 * /cart â€” Shopping cart page (SSR)
 *
 * Thin Astro wrapper around the CartPage React island.
 * Cart data is fetched client-side (requires localStorage cart ID).
 */
import BaseLayout from '../layouts/BaseLayout.astro'
import Breadcrumbs from '../components/shared/Breadcrumbs.astro'
import CartPage from '../components/cart/CartPage'

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://southlandorganics.com'
const canonicalUrl = `${siteUrl}/cart/`

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Cart', href: '/cart/' },
]
---

<BaseLayout
  title="Shopping Cart | Southland Organics"
  description="Review your cart and proceed to checkout."
  canonicalUrl={canonicalUrl}
  noIndex={true}
>
  {/* Breadcrumbs */}
  <div class="bg-gray-50 px-4 py-3">
    <div class="mx-auto max-w-6xl">
      <Breadcrumbs items={breadcrumbItems} />
    </div>
  </div>

  <section class="mx-auto max-w-6xl px-4 py-8 sm:py-12">
    <h1 class="font-heading text-3xl text-gray-900 sm:text-4xl">Your Cart</h1>
    <div class="mt-8">
      <CartPage client:load />
    </div>
  </section>
</BaseLayout>
