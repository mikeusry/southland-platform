---
/**
 * Admin Layout
 * Shared layout for all admin pages with sidebar navigation
 * Simple password protection via session
 */

interface Props {
  title: string
  activeNav?: string
}

const { title, activeNav } = Astro.props

const navItems = [
  { name: 'Dashboard', href: '/admin', icon: 'home' },
  { name: 'Videos', href: '/admin/videos', icon: 'video' },
  { name: 'Site Audit', href: '/admin/site-audit', icon: 'clipboard' },
  { name: 'CDP Analytics', href: '/admin/cdp', icon: 'chart' },
  { name: 'TinaCMS', href: '/cms/index.html', icon: 'edit' },
  { name: 'Branding', href: '/admin/branding', icon: 'palette' },
  { name: 'Images', href: '/admin/images', icon: 'image' },
  { name: 'Quality', href: '/admin/content-quality', icon: 'shield' },
  { name: 'Sales Log', href: '/admin/sales-log', icon: 'phone' },
