---
/**
 * BlogCard - Displays a blog post card with image, title, and excerpt
 * Used in blog grids and listings
 */

interface Props {
  title: string;
  slug: string;
  description: string;
  publishDate: Date;
  featuredImage?: string;
  author?: string;
  segment?: string;
  tags?: string[];
  variant?: 'card' | 'compact' | 'featured';
  class?: string;
}

const {
  title,
  slug,
  description,
  publishDate,
  featuredImage,
  author,
  segment = 'general',
  tags = [],
  variant = 'card',
  class: className = '',
} = Astro.props;

// Format date
const formattedDate = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Segment colors
const segmentColors: Record<string, string> = {
  poultry: 'bg-amber-100 text-amber-800',
  turf: 'bg-emerald-100 text-emerald-800',
  agriculture: 'bg-blue-100 text-blue-800',
  general: 'bg-gray-100 text-gray-800',
};

const variantClasses = {
  card: 'bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow',
  compact: 'flex gap-4 p-4 bg-white rounded-lg border border-gray-100',
  featured: 'bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden',
};
---

<article class={`blog-card ${variantClasses[variant]} ${className}`}>
  {variant === 'compact' ? (
    <!-- Compact layout: horizontal -->
    <Fragment>
      {featuredImage && (
        <img
          src={featuredImage}
          alt={title}
          class="w-24 h-24 rounded-lg object-cover flex-shrink-0"
          loading="lazy"
        />
      )}
      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 mb-1">
          <span class={`text-xs px-2 py-0.5 rounded-full ${segmentColors[segment]}`}>
            {segment}
          </span>
          <time class="text-xs text-gray-500">{formattedDate}</time>
        </div>
        <h3 class="font-bold text-shopify-title truncate">
          <a href={`/blog/${slug}/`} class="hover:text-southland-green">
            {title}
          </a>
        </h3>
        <p class="text-sm text-gray-600 line-clamp-2">{description}</p>
      </div>
    </Fragment>
  ) : (
    <!-- Card/Featured layout: vertical -->
    <Fragment>
      {featuredImage && (
        <a href={`/blog/${slug}/`} class="block aspect-video overflow-hidden">
          <img
            src={featuredImage}
            alt={title}
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            loading="lazy"
          />
        </a>
      )}
      <div class={`p-${variant === 'featured' ? '8' : '6'}`}>
        <div class="flex items-center gap-2 mb-3">
          <span class={`text-xs px-2 py-0.5 rounded-full ${segmentColors[segment]}`}>
            {segment}
          </span>
          <time class="text-xs text-gray-500">{formattedDate}</time>
        </div>

        <h3 class={`font-bold text-shopify-title mb-2 ${variant === 'featured' ? 'text-2xl' : 'text-lg'}`}>
          <a href={`/blog/${slug}/`} class="hover:text-southland-green transition-colors">
            {title}
          </a>
        </h3>

        <p class={`text-shopify-secondary-text mb-4 ${variant === 'featured' ? 'text-base' : 'text-sm'} line-clamp-3`}>
          {description}
        </p>

        {author && (
          <p class="text-sm text-gray-500 mb-3">By {author}</p>
        )}

        {tags.length > 0 && variant === 'featured' && (
          <div class="flex flex-wrap gap-2 mb-4">
            {tags.slice(0, 4).map((tag) => (
              <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">
                {tag}
              </span>
            ))}
          </div>
        )}

        <a
          href={`/blog/${slug}/`}
          class={`inline-flex items-center gap-2 ${variant === 'featured' ? 'btn-primary' : 'text-southland-green hover:underline font-medium text-sm'}`}
        >
          Read more
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </Fragment>
  )}
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
