---
/**
 * Header Component - Wrapper for shared @southland/ui-react Header
 * Data loaded from layout.json (synced from Shopify Storefront API)
 */
import { Header as HeaderReact } from '@southland/ui-react';
import layout from '../../data/layout.json';

const { pathname } = Astro.url;
---

<HeaderReact
  client:load
  logoUrl={layout.header.logoUrl}
  logoAlt={layout.header.logoAlt}
  navigation={layout.header.navigation}
  currentPath={pathname}
/>
