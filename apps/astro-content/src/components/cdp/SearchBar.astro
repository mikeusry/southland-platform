---
/**
 * SearchBar Component
 *
 * Semantic search input that queries content and products.
 * Can be placed in header, hero sections, or standalone.
 *
 * Usage:
 * <SearchBar placeholder="What problem can we help solve?" />
 * <SearchBar size="large" showSuggestions />
 */

interface Props {
  /** Placeholder text */
  placeholder?: string;
  /** Size variant */
  size?: 'small' | 'medium' | 'large';
  /** Show popular suggestions */
  showSuggestions?: boolean;
  /** Additional CSS classes */
  class?: string;
}

const {
  placeholder = 'Search for solutions...',
  size = 'medium',
  showSuggestions = false,
  class: className = '',
} = Astro.props;

const sizeClasses = {
  small: 'search-bar--small',
  medium: 'search-bar--medium',
  large: 'search-bar--large',
};

// Popular searches for suggestions
const popularSearches = [
  'runny poop',
  'sick chickens',
  'FCR improvement',
  'gut health',
  'mortality reduction',
];
---

<div class:list={['search-bar', sizeClasses[size], className]}>
  <form class="search-bar__form" action="/search" method="get">
    <div class="search-bar__input-wrapper">
      <svg class="search-bar__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="M21 21l-4.35-4.35"></path>
      </svg>
      <input
        type="search"
        name="q"
        class="search-bar__input"
        placeholder={placeholder}
        autocomplete="off"
        aria-label="Search"
      />
      <button type="submit" class="search-bar__submit">
        <span class="sr-only">Search</span>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>
  </form>

  {showSuggestions && (
    <div class="search-bar__suggestions">
      <span class="search-bar__suggestions-label">Popular:</span>
      {popularSearches.map((term) => (
        <a href={`/search?q=${encodeURIComponent(term)}`} class="search-bar__suggestion">
          {term}
        </a>
      ))}
    </div>
  )}
</div>

<style>
  .search-bar {
    width: 100%;
    max-width: 600px;
  }

  .search-bar__form {
    width: 100%;
  }

  .search-bar__input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    background: white;
    border: 2px solid #e5e7eb;
    border-radius: 9999px;
    overflow: hidden;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .search-bar__input-wrapper:focus-within {
    border-color: var(--color-accent, #44883e);
    box-shadow: 0 0 0 3px rgba(68, 136, 62, 0.1);
  }

  .search-bar__icon {
    position: absolute;
    left: 16px;
    width: 20px;
    height: 20px;
    color: #9ca3af;
    pointer-events: none;
  }

  .search-bar__input {
    flex: 1;
    border: none;
    outline: none;
    background: transparent;
    font-size: 16px;
    color: #1f2937;
    padding: 12px 16px 12px 48px;
  }

  .search-bar__input::placeholder {
    color: #9ca3af;
  }

  .search-bar__submit {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    margin: 4px;
    background: var(--color-accent, #44883e);
    border: none;
    border-radius: 9999px;
    color: white;
    cursor: pointer;
    transition: background 0.2s;
  }

  .search-bar__submit:hover {
    background: var(--color-accent-hover, #2c5234);
  }

  .search-bar__submit svg {
    width: 20px;
    height: 20px;
  }

  /* Size variants */
  .search-bar--small .search-bar__input {
    padding: 8px 12px 8px 40px;
    font-size: 14px;
  }

  .search-bar--small .search-bar__icon {
    left: 12px;
    width: 16px;
    height: 16px;
  }

  .search-bar--small .search-bar__submit {
    width: 36px;
    height: 36px;
    margin: 3px;
  }

  .search-bar--large .search-bar__input {
    padding: 16px 20px 16px 56px;
    font-size: 18px;
  }

  .search-bar--large .search-bar__icon {
    left: 20px;
    width: 24px;
    height: 24px;
  }

  .search-bar--large .search-bar__submit {
    width: 52px;
    height: 52px;
    margin: 6px;
  }

  /* Suggestions */
  .search-bar__suggestions {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 8px;
    margin-top: 12px;
    font-size: 14px;
  }

  .search-bar__suggestions-label {
    color: #6b7280;
  }

  .search-bar__suggestion {
    display: inline-block;
    padding: 4px 12px;
    background: #f3f4f6;
    border-radius: 9999px;
    color: #4b5563;
    text-decoration: none;
    transition: background 0.2s, color 0.2s;
  }

  .search-bar__suggestion:hover {
    background: var(--color-accent, #44883e);
    color: white;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
