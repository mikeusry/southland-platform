---
/**
 * Guest card component - displays guest info with links
 */

interface GuestLink {
  website?: string
  linkedin?: string
  twitter?: string
  instagram?: string
}

interface Props {
  name: string
  slug: string
  role?: string
  company?: string
  bio?: string
  photo?: string
  links?: GuestLink
  episodeCount?: number
  variant?: 'default' | 'compact' | 'sidebar'
  href?: string
  class?: string
}

const {
  name,
  slug,
  role,
  company,
  bio,
  photo,
  links,
  episodeCount,
  variant = 'default',
  href,
  class: className = '',
} = Astro.props

const guestUrl = href || `/team/${slug}/`
const defaultPhoto = '/images/podcast/guests/default-avatar.jpg'

const isCompact = variant === 'compact'
const isSidebar = variant === 'sidebar'
---

<div
  class={`guest-card ${isSidebar ? 'bg-gray-50 rounded-lg p-4' : 'bg-white rounded-xl border border-gray-100 overflow-hidden'} ${className}`}
>
  <div
    class={`flex ${isSidebar ? 'items-start gap-3' : isCompact ? 'items-center gap-4' : 'flex-col'}`}
  >
    {/* Photo */}
    <a href={guestUrl} class={`block flex-shrink-0 ${isSidebar ? '' : isCompact ? '' : 'w-full'}`}>
      <div
        class={`${isSidebar ? 'w-16 h-16' : isCompact ? 'w-12 h-12' : 'aspect-square'} rounded-full overflow-hidden bg-gray-100`}
      >
        <img
          src={photo || defaultPhoto}
          alt={name}
          class="h-full w-full object-cover"
          loading="lazy"
        />
      </div>
    </a>

    {/* Info */}
    <div class={`${isSidebar || isCompact ? 'flex-1' : 'p-4'}`}>
      <a href={guestUrl} class="block">
        <h4
          class={`font-semibold text-gray-900 hover:text-southland-green transition-colors ${isSidebar ? 'text-sm' : ''}`}
        >
          {name}
        </h4>
      </a>

      {
        (role || company) && (
          <p class={`text-gray-600 ${isSidebar || isCompact ? 'text-xs' : 'text-sm'}`}>
            {role}
            {role && company && ' at '}
            {company}
          </p>
        )
      }

      {
        bio && !isCompact && !isSidebar && (
          <p class="mt-2 line-clamp-3 text-sm text-gray-600">{bio}</p>
        )
      }

      {
        episodeCount !== undefined && (
          <p
            class={`font-medium text-southland-green ${isSidebar || isCompact ? 'mt-1 text-xs' : 'mt-2 text-sm'}`}
          >
            {episodeCount} episode{episodeCount !== 1 ? 's' : ''}
          </p>
        )
      }

      {/* Social links */}
      {
        links && !isCompact && (
          <div class={`flex gap-3 ${isSidebar ? 'mt-2' : 'mt-4'}`}>
            {links.website && (
              <a
                href={links.website}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 transition-colors hover:text-southland-green"
                title="Website"
              >
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                  />
                </svg>
              </a>
            )}
            {links.linkedin && (
              <a
                href={links.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 transition-colors hover:text-blue-600"
                title="LinkedIn"
              >
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              </a>
            )}
            {links.twitter && (
              <a
                href={links.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 transition-colors hover:text-blue-400"
                title="Twitter"
              >
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                </svg>
              </a>
            )}
          </div>
        )
      }
    </div>
  </div>
</div>
