---
/**
 * BillHero Component
 *
 * Hero section personalized for Broiler Bill (Commercial) persona.
 * Messaging focused on ROI, mortality reduction, and production efficiency.
 *
 * Usage:
 * <BillHero stage="aware" />
 */

import type { JourneyStage } from '../../../lib/visitor';

interface Props {
  /** Current journey stage for stage-specific messaging */
  stage?: JourneyStage;
  /** Override the default headline */
  headline?: string;
  /** Override the default subheadline */
  subheadline?: string;
  /** Additional CSS classes */
  class?: string;
}

const {
  stage = 'aware',
  headline,
  subheadline,
  class: className = '',
} = Astro.props;

// Stage-specific content variations for commercial operators
const stageContent = {
  unaware: {
    headline: 'Running a Commercial Poultry Operation?',
    subheadline: 'Discover how leading integrators reduce mortality and improve feed conversion with organic probiotics.',
    cta: { text: 'Learn How It Works', href: '/learn/commercial-poultry/' },
    secondaryCta: { text: 'Request Consultation', href: '/contact/commercial/' },
  },
  aware: {
    headline: 'Proven Results for Commercial Poultry',
    subheadline: 'Reduce mortality by 1-2%, improve FCR, and increase settlement weights with our OMRI Listed organic probiotics.',
    cta: { text: 'View Commercial Products', href: '/shop/poultry/commercial/' },
    secondaryCta: { text: 'See Case Studies', href: '/case-studies/' },
  },
  receptive: {
    headline: 'The Science Behind Better Flock Performance',
    subheadline: 'Learn how probiotics improve gut health, reduce ammonia, and create a healthier grow-out environment.',
    cta: { text: 'Technical Resources', href: '/resources/commercial/' },
    secondaryCta: { text: 'Schedule Demo', href: '/contact/demo/' },
  },
  zmot: {
    headline: 'Compare Commercial Probiotic Solutions',
    subheadline: 'See how Big Ole Bird and Litter Life stack up against traditional treatments.',
    cta: { text: 'Compare Products', href: '/collections/commercial-compare/' },
    secondaryCta: { text: 'Request Quote', href: '/contact/quote/' },
  },
  objections: {
    headline: 'Questions About ROI or Implementation?',
    subheadline: 'We understand. See what integrators and growers are saying about their results.',
    cta: { text: 'View Case Studies', href: '/case-studies/' },
    secondaryCta: { text: 'Talk to an Expert', href: '/contact/commercial/' },
  },
  test_prep: {
    headline: 'Ready for a Trial Run?',
    subheadline: 'Start with a single house or flock. We\'ll help you measure the results.',
    cta: { text: 'Start a Trial', href: '/trial/' },
    secondaryCta: { text: 'Volume Pricing', href: '/pricing/commercial/' },
  },
  challenge: {
    headline: 'Welcome to the Commercial Program',
    subheadline: 'Get implementation guides, dosing calculators, and dedicated support.',
    cta: { text: 'Implementation Guide', href: '/guides/commercial/' },
    secondaryCta: { text: 'Contact Support', href: '/contact/' },
  },
  success: {
    headline: 'Glad Your Flocks Are Performing!',
    subheadline: 'Ready to scale up? Lock in volume pricing and streamline reorders.',
    cta: { text: 'Reorder', href: '/account/orders/' },
    secondaryCta: { text: 'Volume Discounts', href: '/pricing/commercial/' },
  },
  commitment: {
    headline: 'Thanks for Your Partnership',
    subheadline: 'Access exclusive pricing, priority support, and new product previews.',
    cta: { text: 'Partner Dashboard', href: '/account/partner/' },
    secondaryCta: { text: 'Refer a Grower', href: '/referral/commercial/' },
  },
  evangelist: {
    headline: 'Help Other Growers Improve Performance',
    subheadline: 'Share your results and earn rewards for referrals.',
    cta: { text: 'Share Your Story', href: '/case-studies/submit/' },
    secondaryCta: { text: 'Referral Program', href: '/referral/commercial/' },
  },
};

const content = stageContent[stage] || stageContent.aware;
const displayHeadline = headline || content.headline;
const displaySubheadline = subheadline || content.subheadline;
---

<section class:list={['bill-hero', className]}>
  <div class="bill-hero__container">
    <div class="bill-hero__content">
      <span class="bill-hero__badge">
        For Commercial Operations
      </span>
      <h1 class="bill-hero__headline">{displayHeadline}</h1>
      <p class="bill-hero__subheadline">{displaySubheadline}</p>
      <div class="bill-hero__ctas">
        <a href={content.cta.href} class="bill-hero__cta bill-hero__cta--primary">
          {content.cta.text}
        </a>
        <a href={content.secondaryCta.href} class="bill-hero__cta bill-hero__cta--secondary">
          {content.secondaryCta.text}
        </a>
      </div>
      <div class="bill-hero__stats">
        <div class="bill-hero__stat">
          <span class="bill-hero__stat-value">1-2%</span>
          <span class="bill-hero__stat-label">Lower Mortality</span>
        </div>
        <div class="bill-hero__stat">
          <span class="bill-hero__stat-value">3-5%</span>
          <span class="bill-hero__stat-label">Better FCR</span>
        </div>
        <div class="bill-hero__stat">
          <span class="bill-hero__stat-value">500+</span>
          <span class="bill-hero__stat-label">Growers Trust Us</span>
        </div>
      </div>
    </div>
    <div class="bill-hero__visual">
      <div class="bill-hero__image-placeholder">
        <span>Commercial Poultry Operation Image</span>
      </div>
    </div>
  </div>
</section>

<style>
  .bill-hero {
    background: linear-gradient(135deg, #1e3a5f 0%, #0f172a 100%);
    padding: 60px 20px;
  }

  .bill-hero__container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: center;
  }

  @media (min-width: 768px) {
    .bill-hero {
      padding: 80px 40px;
    }

    .bill-hero__container {
      grid-template-columns: 1fr 1fr;
      gap: 60px;
    }
  }

  .bill-hero__badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.15);
    color: #93c5fd;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 6px 14px;
    border-radius: 9999px;
    margin-bottom: 16px;
  }

  .bill-hero__headline {
    font-family: var(--font-heading, 'Eveleth Dot', serif);
    font-size: clamp(32px, 6vw, 52px);
    color: white;
    line-height: 1.1;
    margin-bottom: 16px;
  }

  .bill-hero__subheadline {
    font-size: clamp(16px, 2vw, 20px);
    color: #cbd5e1;
    line-height: 1.6;
    margin-bottom: 28px;
    max-width: 500px;
  }

  .bill-hero__ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 32px;
  }

  .bill-hero__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .bill-hero__cta--primary {
    background: var(--color-accent, #44883e);
    color: white;
  }

  .bill-hero__cta--primary:hover {
    background: var(--color-accent-hover, #2c5234);
    transform: translateY(-2px);
  }

  .bill-hero__cta--secondary {
    background: transparent;
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.5);
  }

  .bill-hero__cta--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: white;
  }

  .bill-hero__stats {
    display: flex;
    flex-wrap: wrap;
    gap: 32px;
  }

  .bill-hero__stat {
    display: flex;
    flex-direction: column;
  }

  .bill-hero__stat-value {
    font-size: 28px;
    font-weight: 700;
    color: #4ade80;
  }

  .bill-hero__stat-label {
    font-size: 13px;
    color: #94a3b8;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .bill-hero__visual {
    display: flex;
    justify-content: center;
  }

  .bill-hero__image-placeholder {
    width: 100%;
    max-width: 500px;
    aspect-ratio: 4/3;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #64748b;
    font-size: 18px;
  }
</style>

<script>
  // Track hero view and CTA clicks
  document.querySelectorAll('.bill-hero__cta').forEach((cta) => {
    cta.addEventListener('click', () => {
      if (window.pdPixel) {
        window.pdPixel.track('hero_cta_clicked', {
          tunnel: 'bill',
          cta_text: cta.textContent?.trim(),
          cta_href: (cta as HTMLAnchorElement).href,
        });
      }
    });
  });
</script>
