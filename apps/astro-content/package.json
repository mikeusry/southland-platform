{
  "name": "@southland/astro-content",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "tinacms dev -c \"astro dev --port 4400\"",
    "dev:astro": "astro dev --port 4400",
    "build": "tinacms build && node scripts/fetch-layout.js || true && npx tsx --tsconfig scripts/tsconfig.json scripts/build-partials.ts && astro build",
    "build-partials": "npx tsx --tsconfig scripts/tsconfig.json scripts/build-partials.ts",
    "preview": "astro preview",
    "astro": "astro",
    "fetch-layout": "node scripts/fetch-layout.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "astro check",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,astro}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,astro}'"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/react": "^4.2.1",
    "@astrojs/tailwind": "^6.0.2",
    "@cloudinary/url-gen": "^1.22.0",
    "@mux/mux-player": "^3.11.4",
    "@southland/shopify-storefront": "workspace:*",
    "@southland/ui-react": "workspace:*",
    "@southland/ui-schema": "workspace:*",
    "@southland/ui-tokens": "workspace:*",
    "@supabase/supabase-js": "^2.89.0",
    "@tinacms/cli": "^2.1.3",
    "@tremor/react": "^3.18.7",
    "astro": "^5.16.6",
    "openai": "^4.67.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "recharts": "^3.7.0",
    "tailwindcss": "^3.4.19",
    "tinacms": "^3.4.0",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@eslint/js": "^9.18.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "pagefind": "^1.4.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11"
  }
}
