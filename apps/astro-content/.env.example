# Southland Content - Environment Variables
# Copy this to .env and fill in the values

# Supabase (point.dog platform)
SUPABASE_URL=https://zpjvhvyersytloyykylf.supabase.co
SUPABASE_SERVICE_KEY=your_service_key_here

# OpenAI (for generating episode embeddings)
OPENAI_API_KEY=your_openai_key_here

# Klaviyo (email capture)
PUBLIC_KLAVIYO_COMPANY_ID=your_klaviyo_company_id
PUBLIC_KLAVIYO_LIST_ID=your_list_id

# Google Tag Manager (optional)
PUBLIC_GTM_CONTAINER_ID=GTM-XXXXXXX

# Site config
PUBLIC_SITE_URL=https://podcast-staging.southlandorganics.com

# point.dog Pixel
PUBLIC_PIXEL_BRAND_ID=southland
PUBLIC_PIXEL_ENDPOINT=https://pixel.southlandorganics.com/collect

# Persona Scoring Worker
PUBLIC_PERSONA_WORKER_URL=https://southland-persona-worker.workers.dev

# BigQuery Webhook (for survey/search logging)
BIGQUERY_WEBHOOK_URL=your_bigquery_webhook_url

# Shopify Storefront API (headless commerce)
# Get from: Shopify Admin → Sales Channels → Headless (or custom app)
PUBLIC_SHOPIFY_STORE_DOMAIN=southland-organics.myshopify.com
PUBLIC_SHOPIFY_STOREFRONT_TOKEN=your_storefront_access_token

# Cloudinary (image optimization)
PUBLIC_CLOUDINARY_CLOUD_NAME=southland-organics
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===========================================
# Content Quality Integration (Mothership)
# See: docs/MOTHERSHIP-INTEGRATION.md
# ===========================================

# Mothership API (point.dog Supabase)
# Used for: persona scoring, content gap analysis
MOTHERSHIP_SUPABASE_URL=https://zpjvhvyersytloyykylf.supabase.co
MOTHERSHIP_SUPABASE_SERVICE_KEY=your_service_key_here

# OpenAI (embeddings for persona scoring)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# DataForSEO (content analysis, SERP, readability)
# Get from: https://dataforseo.com/
# Cost: ~$0.002/request, only called in full scan mode
DATAFORSEO_LOGIN=your_login_here
DATAFORSEO_PASSWORD=your_password_here

# Originality.ai (plagiarism + AI detection)
# Get from: https://app.originality.ai/api-access
# Cost: ~$0.01/100 words, only called in full scan mode
ORIGINALITY_API_KEY=your_api_key_here

# Feature flags (gate expensive APIs)
# Set to false to disable and reduce costs
ENABLE_MOTHERSHIP=true
ENABLE_ORIGINALITY_CHECK=true
ENABLE_DATAFORSEO=true

# ===========================================
# Mux (Video Hosting)
# Environment: v1au3d (Southland / PBS)
# Get from: https://dashboard.mux.com → Settings → API Access Tokens
# ===========================================
MUX_TOKEN_ID=your_mux_token_id
MUX_TOKEN_SECRET=your_mux_token_secret
MUX_ENVIRONMENT_ID=v1au3d

# Brand config
DEFAULT_BRAND_SLUG=southland-organics

# ===========================================
# TinaCMS (Content Management)
# ===========================================

# Get from: https://tina.io/docs/tina-cloud/dashboard/
TINA_CLIENT_ID=your_client_id
TINA_TOKEN=your_token
TINA_SEARCH_TOKEN=your_search_token
